{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@enum/*": ["./src/enum/*"],
      "@lib/*": ["./src/lib/*"]
    }
  },
  "include": ["./src/**/*"]
}
